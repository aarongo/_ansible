# 配置logstash 启动
[program:logstash-{{ project_name }}]
command = {{ LOGSTASH_HOME }}/bin/logstash -f {{ LOGSTASH_CONF_DIR }}/{{ LOGSTASH_CONF_NAME }}
# 程序异常退出后自动重启
autostart = true
autorestart = true
# 启动 5 秒后没有异常退出，就当作已经正常启动了
startsecs = 5
# 启动失败自动重试次数，默认是 3
startretries = 3
# 启动用户
user = {{ LOGSTASH_USER }}
redirect_stderr = true
stdout_logfile={{ LOGSTASH_LOGS_DIR }}/logstash-clients-std.log
stderr_logfile={{ LOGSTASH_LOGS_DIR }}/logstash-clients-err.log