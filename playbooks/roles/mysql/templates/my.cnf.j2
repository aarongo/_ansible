# The following options will be passed to all MySQL clients
[client]
port		= {{mysql_port}}
socket		= {{sock_path}}

# The MySQL server
[mysqld]
port		= {{mysql_port}}
socket		= {{sock_path}}

log-error       = mysql_err.log
pid-file        = {{mysql_pid_path}}
basedir         = {{software_path}}
datadir         = {{mysql_data_path}}



[mysqld]
wait_timeout=31536000
interactive_timeout=31536000



skip-external-locking
skip-name-resolve

max_allowed_packet = 10000M
key_buffer_size = 256M
join_buffer_size= 256M
table_open_cache = 8000
tmp_table_size = 256M
sort_buffer_size = 256M
read_buffer_size = 256M
read_rnd_buffer_size = 64M
myisam_sort_buffer_size = 512M
thread_cache_size = 512
thread_concurrency = 16

query_cache_size= 64M
query_cache_limit = 16M
query_cache_min_res_unit = 32M
max_connections = 4000
max_connect_errors = 6000

innodb_buffer_pool_size = 3192M
innodb_file_io_threads = 4
innodb_thread_concurrency = 8
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 32M 
innodb_log_file_size = 64M
innodb_log_files_in_group = 4
innodb_file_per_table = 0
lower_case_table_names = 1
log_bin_trust_function_creators = 1


default-storage-engine=InnoDB

character_set_server=utf8

#log_slow_queries = mysql-slow.log
#slow-query-log
slow-query-log-file = mysql-slow.log
long_query_time = 1
log_slow_queries=1

log-bin=mysql-bin
binlog_format=mixed
server-id	= 1





[mysqldump]
quick
max_allowed_packet = 64M

[mysql]
no-auto-rehash
prompt=(\\u@\\h--\\p) [\\d]>\\_

[myisamchk]
key_buffer_size = 32M
sort_buffer_size = 16M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout



log_slave_updates = 1
replicate-ignore-db = mysql

