systemLog:
    destination: file
    path: "{{ LOGPATH }}{{ SLAVE }}.log"
    logAppend: true
storage:
    dbPath: "{{ SLAVE_DBPATH }}"
    directoryPerDB: true
    journal:
        enabled: true
replication:  
   oplogSizeMB: 64
   replSetName: {{ REPLSET }}
processManagement:
    fork: true
    pidFilePath: "{{ SLAVE_PID_FILE_PATH }}"
net:
   bindIp: {{ BIND_IP }}
   port: {{ PORT }}